[colors]
background       = ${xrdb:polybar.background:#000000}
background-alt   = ${xrdb:polybar.backgroundAlt:#00000}
foreground       = ${xrdb:polybar.foreground:#ffffff}
foreground-dim   = ${xrdb:polybar.foregroundDim:#ffffff}
foreground-warn  = ${xrdb:polybar.foregroundWarn:#ffffff}
underline-1      = ${xrdb:polybar.underline1:#ffffff}
underline-2      = ${xrdb:polybar.underline2:#ffffff}
underline-active = ${xrdb:polybar.underlineActive:#ffffff}
underline-warn   = ${xrdb:polybar.underlineWarn:#ffffff}

[bar/main]
monitor = ${env:POLYBAR_MONITOR_MAIN}
monitor-fallback =

width  = 100%
height = 18

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 1
padding-left   = 1
padding-right  = 1
module-margin  = 1
fixed-center   = true

font-0 = "Source Code Pro-10;2"
font-1 = "FontAwesome-10;2"

modules-left   = i3
modules-center = mpd
modules-right  = cpu temperature memory filesystem network volume clock

tray-position = right
tray-padding = 1

scroll-up   = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/clock]
type     = internal/date
time     = %r
date-alt = %Y-%m-%d

label           = %date%%time%
label-underline = ${colors.underline-1}

[module/cpu]
type = internal/cpu

label           =  %percentage:2%%
label-underline = ${colors.underline-1}

[module/filesystem]
type     = internal/fs
mount-0  = /
spacing  = 1

label-mounted           =  %mountpoint%: %percentage_used%%
label-mounted-underline = ${colors.underline-2}

[module/i3]
type       = internal/i3
index-sort = true
ws-icon-0  = 1;
ws-icon-1  = 2;
ws-icon-2  = 3;
ws-icon-3  = 4;
ws-icon-4  = 5;
ws-icon-5  = 6;
ws-icon-6  = 7;
ws-icon-7  = 8;
ws-icon-8  = 9;
ws-icon-9  = 10;

label-focused-underline  = ${colors.underline-active}
label-focused-background = ${colors.background-alt}
label-focused-padding    = 1

label-visible-foreground = ${colors.foreground-dim}
label-visible-padding    = 1

label-unfocused-foreground = ${colors.foreground-dim}
label-unfocused-padding    = 1

label-urgent-background = ${colors.foreground-dim}
label-urgent-foreground = ${colors.background}
label-urgent-padding    = 1

label-mode-underline = ${colors.underline-warn}

[module/memory]
type = internal/memory

label =  %percentage_used%%
label-underline = ${colors.underline-1}

[module/mpd]
type = internal/mpd
host = localhost
port = 6600

label-song = %artist% - %title%
label-time = [%elapsed% / %total%]

icon-pause = 
icon-play  = 

format-online            = <toggle> <label-song> <label-time>
format-playing-underline = ${colors.underline-active}
format-paused-underline  = ${colors.underline-warn}
format-stopped           =

[module/network]
type = internal/network
interface = ${env:POLYBAR_WIRED_NIC}

label-connected               =  %upspeed:8%  %downspeed:8%
label-connected-underline     = ${colors.underline-1}
label-disconnected            =  NO CARRIER
label-disconnected-foreground = ${colors.foreground-warn}
label-disconnected-underline  = ${colors.underline-warn}

[module/temperature]
type         = internal/temperature
thermal-zone = ${env:POLYBAR_THERMAL_ZONE}

label-warn-foreground = ${colors.foreground-warn}
label-warn-underline  = ${colors.underline-warn}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 

format           = <ramp> <label>
format-warn      = <ramp> <label-warn>
format-underline = ${colors.underline-2}

[module/volume]
type        = custom/script
exec        = ${env:XDG_CONFIG_HOME}/polybar/volume.sh
click-right = exec pavucontrol-qt
click-left  = ponymix toggle
scroll-up   = ponymix -N increase 1
scroll-down = ponymix -N decrease 1

label-underline = ${colors.underline-2}

