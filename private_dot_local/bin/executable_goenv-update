#!/usr/bin/env fish

set_color blue
echo "Updating goenv..."
set_color normal

for repo in $GOENV_ROOT $GOENV_ROOT/plugins/*
  git -C $repo pull -q
end

set latest (goenv latest --print)
set installed (goenv latest --print-installed)

if test "$installed" != "$latest"
  set_color blue
  echo "Installing latest Go..."
  set_color normal

  goenv latest install
end
