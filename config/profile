# xdg
export XDG_CONFIG_HOME=~/.config
export XDG_DATA_HOME=~/.local/share
export XDG_CACHE_HOME=~/.cache

# programs
export VISUAL=nvim
export EDITOR=nvim
export BROWSER=google-chrome-stable
export TERMINAL=termite
export LESS='-R'

# libvirt
export LIBVIRT_DEFAULT_URI=qemu:///system

# fzf
export FZF_TMUX=1
export FZF_LEGACY_KEYBINDINGS=0
export FZF_DEFAULT_COMMAND='rg --files --no-ignore --hidden --follow --glob "!.git/*" ^/dev/null'
export FZF_DEFAULT_OPTS='--color fg:-1,bg:-1,hl:4,fg+:7,bg+:0,hl+:4 --color info:3,prompt:3,pointer:15,marker:15,spinner:3'
export FZF_FIND_FILE_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

# go
export GOPATH=$HOME/.go

# local variables
test -f ~/.profile.local && source ~/.profile.local

