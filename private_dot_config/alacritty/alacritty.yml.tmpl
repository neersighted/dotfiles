  # position:
  #   x: 0
  #   y: 0
  padding:
    x: 2
    y: 2
  dynamic_padding: true

  {{ if eq .chezmoi.os "darwin" }}
  decorations: buttonless # none,full,transparent,buttonless
  {{ else }}
  decorations: full
  {{ end  }}

  startup_mode: Maximized # Windowed,Maximized,Fullscreen,SimpleFullscreen

  dynamic_title: true
