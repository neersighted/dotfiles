#
# Bootstrapping
#

# fresh: bundler for dotfiles
fresh freshshell/fresh bin/fresh --bin

#
# Shell
#

# fish: the friendly interactive shell, for humans
fresh-options --file=~/.config/fish/config.fish --marker
    fresh config/fish/config.fish
    fresh config/fish/aliases.fish
    fresh config/fish/colors.fish
fresh-options
fresh config/fish/functions --file=~/.config/fish/functions/

#
# Editing
#

# vim: vi improved
fresh config/vim/vimrc --file

#
# Search
#

# ack: better than grep
fresh config/agrc --file=~/.ackrc

# ag: better than ack
fresh config/agrc --file

#
# Graphical
#

# dwm: dynamic window manager
fresh scripts/dwmstatus --bin

# dunst: simple notification daemon
fresh config/dunstrc --file=~/.config/dunst/dunstrc

# dmenu: simple 'graphical' menu
fresh scripts/dmenu_run.pl --bin

# fonts: those things that let you read words
fresh config/fonts.conf --file=~/.config/fontconfig/fonts.conf
fresh fonts --file=~/.local/share/fonts/

# gtk: widget toolkit
fresh config/gtk/settings.ini --file=~/.config/gtk-3.0/settings.ini
fresh config/gtk/gtkrc-2.0 --file

# i3: tiling/tabbed window manger
fresh config/i3/config --file=~/.config/i3/config

# xbindkeys: global keyboard bindings
fresh config/xbindkeysrc --file

# xmodmap: x keysym configuration
fresh config/Xmodmap --file

# xrdb: x resources database
fresh config/Xresources --file

# x: the x display server
fresh config/xinitrc --file
fresh config/xinitrc --file=~/.xsession
fresh config/xserverrc --file

#
# Audio
#

# alsa: advanced linux sound architecture
fresh config/asoundrc --file

#
# Utilities
#

# +x: quickly make a file executable
fresh pengwynn/dotfiles bin/+x --bin

# aur: the arch user repository
fresh falconindy/bin-scripts aurcomm --bin
fresh scripts/aurdiff --bin

# git: the stupid content tracker
fresh-options --file=~/.config/git/config --marker
    fresh config/git/config
    fresh config/git/colors
fresh-options
fresh config/git/attributes --file=~/.config/git/attributes
fresh config/git/ignore --file=~/.config/git/ignore
fresh config/git/template --file=~/.config/git/template/

# gibo: gitignore boilerplates
fresh simonwhitaker/gitignore-boilerplates gibo --bin

# gitio: github's url shortener
fresh pengwynn/dotfiles bin/gitio --bin

# gnupg: the gnu privacy guard
fresh config/gnupg/gpg.conf --file=~/.gnupg/gpg.conf
fresh config/gnupg/gpg-agent.conf --file=~/.gnupg/gpg-agent.conf

# gxpr: google/wolfram|alpha expression calculator
fresh pengwynn/dotfiles bin/gxpr --bin

# hide: quickly hide a file (by prepending a dot)
fresh pengwynn/dotfiles bin/hide --bin

# htop: interactive process monitor
fresh config/htoprc --file=~/.config/htop/htoprc

# jruby: ruby-on-jvm interperter
fresh config/jrubyrc --file

# makepkg: arch linux packager
fresh config/makepkg.conf --file=~/.makepkg.conf

# man.cx: open manpages in man.cx
fresh pengwynn/dotfiles bin/man.cx --bin

# notes: view notes in a file (ie todo/xxx/fixme)
fresh pengwynn/dotfiles bin/notes --bin

# octocatsay: like cowsay, but...
fresh cobyism/octocatsay bin/octocatsay --bin

# pass: the standard unix password manager
fresh scripts/lastpass2pass.rb --bin=~/bin/lp2p
if [[ "$(uname)" != "Darwin" ]]; then
    fresh zx2c4/password-store src/password-store.sh --bin=~/bin/pass
fi

# pry: advanced ruby repl
fresh config/pryrc --file --marker

# pyenv: python version manager
fresh scripts/pyenv-install --bin

# rbenv: ruby version manager
fresh scripts/rbenv-install --bin
fresh config/rbenv/default-gems --file=~/.rbenv/default-gems

# readline: terminal input
fresh config/inputrc --file

# repl: sometimes you need a repl
fresh defunkt/repl bin/repl --bin

# rubygems: ruby package manager
fresh config/gemrc --file

# spark: fancy 'sparklines' in your shell
fresh holman/spark spark --bin

# sprunge: curl-based pastebin
fresh falconindy/bin-scripts sprunge --bin

# tarsnap: encrypted backups for the truly paranoid
fresh config/tarsnaprc --file

# trunc: truncate files
fresh pengwynn/dotfiles bin/trunc --bin

# tmux: terminal multiplexer
fresh-options --file=~/.tmux.conf --marker
    fresh config/tmux/main.conf
    fresh config/tmux/statusline.conf
    if [[ "$(uname)" == "Darwin" ]]; then
        fresh config/tmux/osx.conf
    elif [[ "$(uname)" == "Linux" ]]; then
        fresh config/tmux/linux.conf
    fi
fresh-options

# timein: what time is it in X?
fresh jasoncodes/dotfiles bin/timein --bin

# vi:ft=sh:
